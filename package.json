		"prettier-plugin-tailwindcss": "^0.6.14",
		"sortablejs": "^1.15.6",
		"svelte": "^5.39.2",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.13",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"typescript-parsec": "^0.3.4",
		"vite": "^6.3.6",
		"vitest": "^3.2.4"
	},
	"type": "module",
	"dependencies": {
		"dexie": "^4.2.0",
