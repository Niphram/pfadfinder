{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],
	"experimentalTernaries": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^\\./\\$types",
		"",
		"^\\$(?!lib/)",
		"",
		"^\\$lib/(?!data|components|pages|atoms)",
		"",
		"^\\$lib/atoms(/.*)?$",
		"",
		"^\\$lib/components(/.*)?$",
		"",
		"^\\$lib/pages(/.*)?$",
		"",
		"^\\$lib/data(/.*)?$",
		"",
		"^[.]"
	]
}
